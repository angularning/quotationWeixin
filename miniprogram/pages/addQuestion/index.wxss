/* pages/editPage/index.wxss */
.editList{
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content:flex-start;
  border-bottom: 1px #ccc solid;
  margin:10px 4%;
  padding: 10px 0;
}
.editList text{
  display: inline-block;
  width: 40%;
  font-size: 16px;
  margin-bottom: 10px;
}
.editList input{
  width: 100%;
  height: 30px;
  line-height: 30px;
}
.saveBtn{
  width: 50%;
  background-color: #507ee6;
  color: #fff;
  margin-top: 50px;
}