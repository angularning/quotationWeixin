.goodsBody {
  width: 94%;
  margin: 5% 3%;
  max-height: 500px;
  overflow: auto;
}

.goodsList {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: left;
  width: 92%;
  background: #ffffff;
  border-radius: 10px;
  margin-bottom: 15px;
  padding: 4%;
}

.goodsListImages {
  width: 100px;
  height: 100px;
  background: #eee;
  border-radius: 5px;
  margin-right: 4%;
}

.goodsNumBtn {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.goodsNumBtn1 {
  width: 100px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  background: rgb(168, 22, 22);
  border-radius: 10px;
  color: #fff;
  text-align: center;
}

.goodsName {
  font-size: 16px;
  color: #222;
  font-weight: bold;
  margin-bottom: 10px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goodsPrice {
  font-size: 14px;
  color: #c31717;
  margin-bottom: 5px;
}

.goodsNum {
  font-size: 13px;
  color: #8a8a8a;
}

